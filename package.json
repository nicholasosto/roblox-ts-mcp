  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/roblox-ts-mcp.git"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@types/cheerio": "^0.22.35",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "zod": "^3.25.76"
