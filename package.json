{
  "name": "roblox-ts-mcp",
  "version": "1.0.1",
  "description": "MCP server for Roblox-ts development with best practices and library enforcement",
  "main": "dist/server.js",
  "bin": {
    "roblox-ts-mcp": "./bin/roblox-ts-mcp.js"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "USAGE.md"
  ],
  "scripts": {
